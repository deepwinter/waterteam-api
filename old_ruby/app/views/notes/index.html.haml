%p#notice= notice
%h1 Notes
%table
  %thead
    %tr
      %th Integer
      %th Datetime
      %th String
      %th{:colspan => "3"}
  %tbody
    - @notes.each do |note|
      %tr
        %td= note.integer
        %td= note.datetime
        %td= note.string
        %td= link_to 'Show', note
        %td= link_to 'Edit', edit_note_path(note)
        %td= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Note', new_note_path
